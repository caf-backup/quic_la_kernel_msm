#include "qcom-qca961x.dtsi"
#include "qcom-qca961x-display.dtsi"
#include "qpic-panel-ili-qvga.dtsi"

/ {
	model = "Qualcomm Technologies, Inc. QCA961x R3PC";
	compatible = "qcom,qca961x-r3pc", "qcom,qca961x";

	memory {
		device_type = "memory";
		reg = <0x80000000 0x20000000>; /* 512MB */
	};

	chosen {
		bootargs = "console=ttyMSM0,115200n8";
	};

};
	&soc {
		pinctrl@0x01000000 {
			serial_pins: serial_pinmux {
				mux {
					pins = "gpio16", "gpio17";
					function = "blsp_uart0";
					bias-disable;
				};
			};
		};

		serial@78af000 {
			pinctrl-0 = <&serial_pins>;
			pinctrl-names = "default";
			status = "ok";
		};

		serial@78b0000 {
			status = "ok";
		};

		ess-switch@c000000 {
			compatible = "qcom,ess-switch";
			reg = <0xc000000 0x80000>; /* 512KB */
			switch_access_mode = "local bus";
		};
	};
